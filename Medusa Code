#include <Servo.h>

Servo servo1; //medusa turning servo
Servo servo2; //poseidon servo
Servo servo3; //athena servo
Servo servo4; //soldiers servo
const int ldrPin1 = 2; //light sensor for poseidon? 
const int buttonPin2 = 1; //something 
const int ledPin = 3; 
const int ledPin = 4;
bool A = FALSE; 
bool B = FALSE; 
bool C = FALSE;

void setup() {
serial.begin(9600);
  servo1.attach(9); // Servo goes on pin 9
  servo2.attach(10); //pin10
  servo3.attach(11); //pin11
  servo4.attach(12); //pin12
    pinMode(ldrPin1, INPUT);
    pinMode(ledPin, OUTPUT);
}

void loop(){
int ldrstatus = analogRead(ldrPin1)
sensorVal = analogRead(ldrPin1)
  if(digitalRead(ldrPin) == LOW){
    A = TRUE; 
    servo2.write(180); //What angle are we turning it? 

  }if(A = TRUE) {
    servo3.write(90);
    servo1.write(180); 
    digitalWrite(ledPin, HIGH);
  }if (B = TRUE) {
    servo4.write(180);
    C = TRUE
}
