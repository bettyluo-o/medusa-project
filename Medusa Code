#include <Servo.h>

Servo servo1; //medusa turning servo
Servo servo2; //what to do with this servo? 
Servo servo3; //athena servo
Servo servo4; //soldiers servo
const int buttonPin2 = 2; //soldiers switch
const int buttonPin1 = 1; //poseidon's switch
const int ledPin = 3; 
const int ledPin = 4;
bool A = FALSE; 
bool B = FALSE;

void setup() {
serial.begin(9600);
  servo1.attach(9); // Servo goes on pin 9
  servo2.attach(10); //pin10
  servo3.attach(11); //pin11
  servo4.attach(12); //pin12
    pinMode(ldrPin1, INPUT);
    pinMode(ledPin, OUTPUT);
    pinMode(buttonPin1, INPUT);
}

void loop(){
int ldrstatus = analogRead(ldrPin1)
sensorVal = analogRead(ldrPin1)
buttonState = digitalRead(buttonPin1);
  if(digitalRead(buttonPin1, HIGH){
    A = TRUE; 
    servo3.write(90);
    servo1.write(180); 
    digitalWrite(ledPin, HIGH);
} if (A = TRUE) {
  if (digitalRead(buttonPin2, HIGH){
    servo4.write(180);
}
